<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white">
    
	<TextView 
	    android:id="@+id/record_recording_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:text="Recording..."
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="@android:color/white"/>
	<ImageView 
	    android:id="@+id/record_mic_imageview"
	    android:layout_width="150dp"
	    android:layout_height="150dp"
	    android:layout_below="@id/record_recording_textview"
	    android:layout_marginTop="5dp"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/mic_big"
	    android:scaleType="fitCenter"/>
	<ImageButton 
	    android:id="@+id/record_stop_imagebutton"
	    android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:layout_below="@id/record_mic_imageview"
	    android:layout_marginTop="5dp"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/stop_background"
	    android:scaleType="fitCenter"
	    android:background="@android:color/transparent"/>
</RelativeLayout>
